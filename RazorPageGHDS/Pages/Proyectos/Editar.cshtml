@page
@model RazorPageGHDS.Pages.Proyectos.EditarModel
@{
    ViewData["Title"] = "Editar proyecto";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Editar proyecto</h2>
    </div>
    <div class="card-body">
        <form method="post">
            @*Agrega vallidación, campo no vacio*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*Se envia Id oculto*@
            <input type="hidden" asp-for="Proyecto.CodProyecto" />

            <div class="container" style="padding:30px">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Proyecto.Nombre"></label>
                        </div>
                        <div class="col-sm-6 mb-2">
                            <input asp-for="Proyecto.Nombre" class="form-control" />
                        </div>
                        <span asp-validation-for="Proyecto.Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Proyecto.Dirección"></label>
                        </div>
                        <div class="col-sm-6 mb-2">
                            <input asp-for="Proyecto.Dirección" class="form-control" />
                        </div>
                        <span asp-validation-for="Proyecto.Dirección" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Proyecto.Estado"></label>
                        </div>
                        <div class="col-sm-6 mb-2">
                            <select asp-for="Proyecto.Estado" class="form-control">
                                <option value="">Seleccionar Estado</option>
                                <option value="1">Pendiente</option>
                                <option value="2">Confirmado</option>
                                <option value="3">Terminado</option>
                            </select>
                        </div>
                        <span asp-validation-for="Proyecto.Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2 offset-sm-2">
                            <input type="submit" value="Editar" class="btn btn-success form-control" />
                        </div>
                        <div class="col-sm-4">
                            <a asp-page="Proyectos" class="btn btn-primary form-control">Volver a la lista</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>