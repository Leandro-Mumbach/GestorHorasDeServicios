@page
@model RazorPageGHDS.Pages.Servicios.AgregarModel
@{
    ViewData["Title"] = "Crear nuevo servicio";
}
<div class="card">
    <div class="card-header">
        <h2 class="text-info">Crear nuevo servicio</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="container" style="padding:30px">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Servicio.Descr"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Servicio.Descr" class="form-control" />
                        </div>
                        <span asp-validation-for="Servicio.Descr" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Servicio.Estado"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Servicio.Estado" class="form-control" />
                        </div>
                        <span asp-validation-for="Servicio.Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Servicio.ValorHora"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Servicio.ValorHora" class="form-control" />
                        </div>
                        <span asp-validation-for="Servicio.ValorHora" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2 offset-sm-2">
                            <input type="submit" value="Agregar" class="btn btn-success form-control" />
                        </div>
                        <div class="col-sm-4">
                            <a asp-page="Servicios" class="btn btn-primary form-control">Volver a la lista</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
