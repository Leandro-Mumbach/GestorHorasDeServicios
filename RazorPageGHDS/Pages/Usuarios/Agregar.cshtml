@page
@model RazorPageGHDS.Pages.Usuarios.AgregarModel
@{
    ViewData["Title"] = "Crear nuevo usuario";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Crear nuevo usuario</h2>
    </div>
    <div class="card-body">
        <form method="post">
            @*Agrega validación, campo no vacio*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="container" style="padding:30px">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="User.Nombre"></label>
                        </div>
                        <div class="col-sm-6 mb-2">
                            <input asp-for="User.Nombre" class="form-control" />
                        </div>
                        <span asp-validation-for="User.Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="User.Dni"></label>
                        </div>
                        <div class="col-sm-6 mb-2">
                            <input asp-for="User.Dni" class="form-control" />
                        </div>
                        <span asp-validation-for="User.Dni" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="User.Tipo"></label>
                        </div>
                        <div class="col-sm-6 mb-2">
                            <select asp-for="User.Tipo" class="form-control">
                                <option value="">Seleccionar Tipo</option>
                                <option value="1">Admin</option>
                                <option value="2">Consultor</option>
                            </select>
                        </div>
                        <span asp-validation-for="User.Tipo" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="User.Contraseña"></label>
                        </div>
                        <div class="col-sm-6 mb-2">
                            <input asp-for="User.Contraseña"  class="form-control" />
                        </div>
                        <span asp-validation-for="User.Contraseña" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2 offset-sm-2">
                            <input type="submit" value="Agregar" class="btn btn-success form-control" />
                        </div>
                        <div class="col-sm-4">
                            <a asp-page="Usuarios" class="btn btn-primary form-control">Volver a la lista</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>